
<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') }}" alt="card-img-top" style="width: 100%; height:auto">
    {% else %}
        <img src="{{ '/images/properties/empty.jpg' }}" alt="card-img-top" style="width: 100%; height:auto">
    {% endif %}

    <!--     <img src=" vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height:auto"> -->
    <div class="card-body">
        <h5 class="car-title">
            <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
        </h5>
        <p class="card-text">{{ property.description | nl2br }} </p>
        <p class="card-text">{{ property.surface}} m2 - {{ property.city }} ({{ property.postalCode }})</p>
        <p class="text-primary" style="font-size:2rem; font-weight:bold;">{{ property.formatedPrice }} $</p>
    </div>
</div>
            