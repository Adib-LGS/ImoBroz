
<div class="card mb-4">
    <div class="card-body">
        <h5 class="car-title">
            <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
        </h5>
        <p class="card-text">{{ property.description | nl2br }} </p>
        <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
        <p class="text-primary" style="font-size:2rem; font-weight:bold;">{{ property.formatedPrice }} $</p>
    </div>
</div>
            